    <a href="@Url.Action("Create", "Medicos")" class="btn btn-success">Crear uno nuevo</a>
    <a href="@Url.Action("imprimir", "Medicos")" class="btn btn-danger">Convertir a PDF</a>
</p>
<p>
    @using (Html.BeginForm("Index", "Medicos", FormMethod.Post))
    {
        <div style="margin: 0 auto;">
            <h5>Busquedas</h5>

            <div class="row">
                @Html.TextBox("busqueda", "", new { @class = "form-control mb-2", placeholder = "Buscar" })
                <select name="select" class="form-control col col-lg-2">
                    <option value="">Elige una opcion</option>
                    <option value="Nombre_Medico">Nombre</option>
                    <option value="Especialidad_Medico">Especialidad</option>
                </select>
                <div class="col-2">
                    <button type="submit" class="btn btn-success">✔️</button>
                </div>
            </div>
        </div>
    }
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_Medico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Exequátur_Medico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especialidad_Medico)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Medico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exequátur_Medico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad_Medico)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_Medico }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID_Medico }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_Medico })
            </td>
        </tr>
    }

</table>
