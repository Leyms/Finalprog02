@model IEnumerable<Finalprog02.Models.ClassHabitaciones>

@{
    ViewBag.Title = "Index";
}

<br />
<br />

<p>
    <a href="@Url.Action("Create", "Habitaciones")" class="btn btn-success">Crear uno nuevo</a>
    <a href="@Url.Action("imprimir", "Habitaciones")" class="btn btn-danger">PDF</a>
</p>

<p>
    @using (Html.BeginForm("Index", "Habitaciones", FormMethod.Post))
    {
        <div style="margin: 0 auto;">
            <h5>Busquedas.</h5>

            <div class="row">
                @*@Html.TextBox("busqueda", "", new { @class = "form-control mb-2", placeholder = "Buscar" })*@
                <select name="select" class="form-control mb-2">
                    <option value="">Tipo de habitacion</option>
                    <option value="Doble">Doble</option>
                    <option value="privada">Privada</option>
                    <option value="Suite">Suite</option>
                </select>
                <div class="col-2">
                    <button type="submit" class="btn btn-success">✔️</button>
                </div>
            </div>
        </div>
    }
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Num_Habitacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo_Habitacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioDia_Habitacion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Num_Habitacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_Habitacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioDia_Habitacion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_Habitacion }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID_Habitacion }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_Habitacion })
            </td>
        </tr>
    }

</table>
