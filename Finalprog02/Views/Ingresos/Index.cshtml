@model IEnumerable<Finalprog02.Models.ClassIngresos>

@{
    ViewBag.Title = "Index";
}
<br />
<br />

<p>
    <a href="@Url.Action("Create", "Ingresos")" class="btn btn-success">Crear Nuevo</a>
    @*<a href="@Url.Action("imprimir", "Ingresos")" class="btn btn-danger">PDF</a>*@
    <button onclick="funcionimprimir()" class="btn btn-danger">PDF</button>
    <a href="/Ingresos/Create" class="btn btn-warning">Atrás</a>
</p>
<p>
    @using (Html.BeginForm("Index", "Ingresos", FormMethod.Post))
    {
        <div style="margin: 0 auto;">
           <h4>Ingresos</h4>
            <h5>Formato Fecha YYYY-MM-DD</h5>

            <div class="row">
                @Html.TextBox("busqueda", "", new { @class = "form-control mb-2", placeholder = "Buscar" })
                <select name="select" class="form-control mb-2">
                    <option value="">Elige una opcion</option>
                    <option value="Fecha_Ingreso">Fecha</option>
                    <option value="ID_Habitacion">Habitacion</option>
                </select>
                <div class="col-2">
                    <button type="submit" class="btn btn-success">✔️</button>
                </div>
            </div>
        </div>
    }
</p>
<br />
<div id="idimpresion">
    <h4>Listado de Ingresos</h4>
    <table class="table table-striped" id="idimpresion">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Habitacion.Num_Habitacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacientes.Nombre_Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_Ingreso)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Habitacion.Num_Habitacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pacientes.Nombre_Paciente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID_Ingresos }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID_Ingresos }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID_Ingresos })
                    </td>*@
            </tr>
        }

    </table>
</div>