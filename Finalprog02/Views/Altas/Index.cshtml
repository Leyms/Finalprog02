@model IEnumerable<Finalprog02.Models.ClassAltas>

@{
    ViewBag.Title = "Index";
}

<br />
<br />

<p>
    <a href="@Url.Action("Create", "Altas")" class="btn btn-success">Crear uno nuevo</a>
    <a href="@Url.Action("imprimir", "Altas")" class="btn btn-danger">PDF</a>
</p>
<p>
    @using (Html.BeginForm("Index", "Altas", FormMethod.Post))
    {

        <div style="margin: 0 auto;">
            <h5>Busquedas</h5>
            <h5>Formato Fecha YYYY-MM-DD</h5>
            <div class="row">
                @Html.TextBox("busqueda", "", new { @class = "form-control mb-2", placeholder = "Buscar" })

                <select name="select" class="form-control mb-2">
                    <option value="">Elige una opcion</option>
                    <option value="Paciente">Paciente</option>
                    <option value="Fecha">Fecha Salida</option>
                </select>
                <div class="col-2">
                    <button type="submit" class="btn btn-success">✔️</button>
                </div>
            </div>
        </div>
    }
</p>
<br />
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ingresos.Fecha_Ingreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_Paciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Ingreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Salida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Habitacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ingresos.Fecha_Ingreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Paciente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Salida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Habitacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            @*<td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_Altas }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID_Altas }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_Altas })
            </td>*@
        </tr>
    }

</table>
